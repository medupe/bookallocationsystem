  @model bookallocationsystem.Models.Learners.LearnerViewCreate
@{
    ViewData["Title"] = "Create Learner";
}
  <div class="page-breadcrumb bg-white">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title text-uppercase font-medium font-14">Add Learner</h4>
                    </div>

                </div>
                <!-- /.col-lg-12 -->
            </div>

              <div class="container-fluid">
                     <div class="col-lg-12 col-xlg-9 col-md-12">
                        <div class="card">
                            <div class="card-body">

                                   <form  asp-action="Create" asp-controller="Learner" method="POST">
                                           <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">First Name</label>
                                        <div class="col-md-12 border-bottom p-0">
                                      <input  class="form-control p-0 border-0" asp-for="FirstName" id="code" type="text" placeholder="Enter learner first name" />


                                                 </div>
                                                       <div class="error">
         @Html.ValidationMessageFor(x => x.FirstName)
        </div>

                                    </div>

                                         <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">Last Name</label>
                                        <div class="col-md-12 border-bottom p-0">

                                        <input  class="form-control p-0 border-0"  asp-for="LastName" id="inputPassword" type="text" placeholder="Enter Learner last Name" />


                                                 </div>
                                                          <div class="error">@Html.ValidationMessageFor(x => x.LastName)</div>
                                    </div>

          <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">Idenity number</label>
                                        <div class="col-md-12 border-bottom p-0">

                                        <input  class="form-control p-0 border-0"  asp-for="IdentityNumber" id="inputPassword" type="text" placeholder="Enter Identity number" />


                                                 </div>
                                                          <div class="error">@Html.ValidationMessageFor(x => x.IdentityNumber)</div>
                                    </div>







                                         <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">Enter Grade</label>
                                        <div class="col-md-12 border-bottom p-0">
                                                 <select class="form-control p-0 border-0"  asp-for="Grade">
                                                <option value="8">Grade 8</option>
                                                <option value="9" >Grade 9</option>
                                                <option value="10">Grade 10</option>
                                                <option value="11">Grade 11</option>
                                                <option value="12">Grade 12</option>

                                            </select>
                                                           </div>

                                                                <div class="error invalid-feedback">@Html.ValidationMessageFor(x => x.Grade)</div>
                                    </div>








                                         <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">Class</label>
                                        <div class="col-md-12 border-bottom p-0">
                                  <select class="form-control p-0 border-0"  asp-for="GradeClass">
                                                <option>A</option>
                                                <option>B</option>
                                                <option>C</option>
                                                <option>D</option>
                                                <option>E</option>
                                                  <option>F</option>
                                            </select>


                                                 </div>
                                                            <div class="error">@Html.ValidationMessageFor(x => x.GradeClass)</div>
                                    </div>








                            





                                    <div class="form-group mb-4">
                                        <div class="col-sm-12">
                                            <button class="btn btn-success">Add Learner</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                  </div>
