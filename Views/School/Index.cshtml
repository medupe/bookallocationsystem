@model Bookallocationsystem.Models.Schools.SchoolViewIndex
@{
    ViewData["Title"] = "Dashboard Page";
}

                   <div class="page-breadcrumb bg-white">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title text-uppercase font-medium font-14">School</h4>
                    </div>
               
                </div>
                <!-- /.col-lg-12 -->
            </div>

              <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <h3 class="box-title">Basic Table</h3>
                               <div class="float-right">
                                   <a class="btn btn-success"     asp-action="Create" asp-controller="School"      >Add School</a>
                               </div>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="border-top-0">#</th>
                                            <th class="border-top-0">School Name</th>
                                            <th class="border-top-0">Region</th>
                                            <th class="border-top-0">Province</th>
                                              <th class="border-top-0">Contact Person</th>
                                                <th class="border-top-0">Contact Number</th>
                                                       <th class="border-top-0">Email</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.schoolList)

                                        {
                                        <tr>
                                                <td>1</td>
                                            <td>@item.SchoolName</td>
                                                <td>@item.SchoolNr</td>
                                            <td>@item.Region</td>
                                        
                                            <td>@item.Province</td>
                                            <td>@item.ContactPerson</td>
                                            <td>@item.CellNumber</td>
                                               </tr>
                                        }
                                                                        </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->

            </div>
