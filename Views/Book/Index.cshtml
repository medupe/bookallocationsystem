@model  bookallocationsystem.Models.Books.BookViewIndex
@{
    ViewData["Title"] = "Dashboard Page";
}

                   <div class="page-breadcrumb bg-white">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title text-uppercase font-medium font-14">Book</h4>
                    </div>

                </div>
                <!-- /.col-lg-12 -->
            </div>

              <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <h3 class="box-title">Basic Table</h3>
                               <div class="float-right">
                                   <a class="btn btn-success"     asp-action="Create" asp-controller="Book"      >Add Book</a>
                                         <a class="btn btn-primary"     asp-action="Upload" asp-controller="Book"      >Upload books</a>
                               </div>
                            <div class="table-responsive">

                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="border-top-0">#</th>
                                            <th class="border-top-0">Code</th>
                                            <th class="border-top-0">Title</th>
                                            <th class="border-top-0">ISBN</th>
                                              <th class="border-top-0">Subject</th>
                                                <th class="border-top-0">Condition</th>
                                                <th class="border-top-0">Grade</th>
                                                 <th class="border-top-0">Grade Class</th>
                                              <th class="border-top-0">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{
                                int c = 1;
                                foreach (var item in Model.BookList)

                                {
                                                            <tr>
                                                                    <td>@c</td>
                                                                <td>@item.Code</td>
                                                                    <td>@item.Title</td>
                                                                <td>@item.ISBN</td>

                                                                <td>@item.Subject.Name</td>
                                                                 <td>@item.Condition</td>
                                                                <td>@item.Grade</td>
                                                                <td>@item.GradeClass</td>
                                                                <td> <a class="btn btn-link"     asp-action="Create" asp-controller="Allocate" asp-route-id="@item.Id"     >Allocate</a></td>
                                                                   </tr>
                                    c = c + 1;
                                }
                                        }
                                                                        </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->

            </div>
