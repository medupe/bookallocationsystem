  @model bookallocationsystem.Models.Books.BookViewCreate
@{
    ViewData["Title"] = "Create book";
}
  <div class="page-breadcrumb bg-white">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title text-uppercase font-medium font-14">Add Book</h4>
                    </div>

                </div>
                <!-- /.col-lg-12 -->
            </div>

              <div class="container-fluid">
                     <div class="col-lg-12 col-xlg-9 col-md-12">
                        <div class="card">
                            <div class="card-body">

                                   <form  asp-action="Create" asp-controller="Book" method="POST">
                                           <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">Code</label>
                                        <div class="col-md-12 border-bottom p-0">
                                      <input  class="form-control p-0 border-0" asp-for="Code" id="code" type="text" placeholder="Enter book code" />


                                                 </div>
                                                       <div class="error">
         @Html.ValidationMessageFor(x => x.Code)
        </div>

                                    </div>

                                         <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">Title</label>
                                        <div class="col-md-12 border-bottom p-0">

                                        <input  class="form-control p-0 border-0"  asp-for="Title" id="inputPassword" type="text" placeholder="Enter Book Title" />


                                                 </div>
                                                          <div class="error">@Html.ValidationMessageFor(x => x.Title)</div>
                                    </div>

          <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">ISBN</label>
                                        <div class="col-md-12 border-bottom p-0">

                                        <input  class="form-control p-0 border-0"  asp-for="ISBN" id="inputPassword" type="text" placeholder="Enter Book Title" />


                                                 </div>
                                                          <div class="error">@Html.ValidationMessageFor(x => x.ISBN)</div>
                                    </div>







                                         <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">Enter Grade</label>
                                        <div class="col-md-12 border-bottom p-0">
                                                 <select class="form-control p-0 border-0"  asp-for="Grade">
                                                <option value="8">Grade 8</option>
                                                <option value="9" >Grade 9</option>
                                                <option value="10">Grade 10</option>
                                                <option value="11">Grade 11</option>
                                                <option value="12">Grade 12</option>
                                              
                                            </select>
                                                           </div>
                                                  
                                                                <div class="error invalid-feedback">@Html.ValidationMessageFor(x => x.Grade)</div>
                                    </div>


                                    





                                         <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">Class</label>
                                        <div class="col-md-12 border-bottom p-0">
                                  <select class="form-control p-0 border-0"  asp-for="GradeClass">
                                                <option>A</option>
                                                <option>B</option>
                                                <option>C</option>
                                                <option>D</option>
                                                <option>E</option>
                                                  <option>F</option>
                                            </select>


                                                 </div>
                                                            <div class="error">@Html.ValidationMessageFor(x => x.GradeClass)</div>
                                    </div>








                                    <div class="form-group mb-4">
                                        <label class="col-sm-12">Subject</label>
                                        <div class="col-sm-12 border-bottom p-0">
                                             @Html.DropDownListFor(x => Model.SubjectId, new SelectList(Model.SubjectList, "Id", "Name"), htmlAttributes: new { @class = "form-control p-0 border-0", @id = "School" })


                                        </div>

                                    </div>
                                              <div class="form-group mb-4">
                                        <label class="col-sm-12">School</label>
                                        <div class="col-sm-12 border-bottom p-0">
                                             @Html.DropDownListFor(x => Model.SchoolId, new SelectList(Model.SchoolList, "Id", "SchoolName"), htmlAttributes: new { @class = "form-control p-0 border-0", @id = "School" })


                                        </div>

                                    </div>





                                    <div class="form-group mb-4">
                                        <div class="col-sm-12">
                                            <button class="btn btn-success">Add Book</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                  </div>
